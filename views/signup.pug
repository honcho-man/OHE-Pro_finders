extends layout

block content
  include menu 
  .page-contn.p-0
    .page-width.p-0.mt-5.mt-lg-0
      .alert-contn.justify-content-center.text-center.col-12
        if (errmsg)
          .col-lg-4.col-md-4.alert #{errmsg}
        else
          .col-lg-4.col-md-4.alert.fade-out
      .container-fluid
        .welcome-text.container-fluid.pt-5.pt-lg-0.mt-2.mt-lg-0
          h2.head-tag.text-center.pt-4 Glad to have you on board!
          h4.head-tag.text-center.text-muted.lighter-font Let's get you set up.
      .container-fluid.form-parent.p-4
        .form-container.off-canvas.col-md-5.col-12.p-0
          form.form-signup
            .form-group
              label(for='Firstname') First name
              input#Firstname.form-control(type='text' name='firstname' required)
            .form-group
              label(for='Lastname') Last name
              input#Lastname.form-control(type='text' name='lastname' required)
            .form-group
              label(for='EmailAddress') Email Address
              input#EmailAddress.form-control(type='email' name='email' required)
            .form-group
              label(for='password') Password
              input#passwordI.form-control(type='password' name='password' required)  
            .form-group
              label(for='password') Confirm Password
              input#passwordII.form-control(type='password' name='password2' required)
            .row.hide
              .checkbox.col-6
                label
                  input(type='checkbox' value='remember-me')
                  |  Remember me
              .col-6.text-right
                a(href="#") Forgot Password?
            .text-left
              | By clicking "Sign Up" you indicate that you agree to the 
              a(href="/privacy") terms of service.
            .text-center.pt-3.pb-3
              button.primary-btn(type="submit").text-center
                span sign up
              h4.pl-4.pr-4.m-2 OR
              .container-fluid.p-0.m-0
                .row.p-0
                  .col-12.p-0.m-0.mt-3
                    .d-flex.justify-content-center.align-items-center.p-0.pb-3
                      .col-12.text-center
                        a(href="/google").secondary-btn
                          span.google                   
                            i.lni.lni-google.pr-3
                            | Login with Google+
                  .col-12.p-0.m-0.mt-3
                    .d-flex.justify-content-center.align-items-center.p-0.pb-3
                      .col-12.text-center
                        a(href="/facebook").secondary-btn
                          span.fb                 
                            i.lni.lni-facebook.pr-3
                            | Login with Facebook
            .pt-2
            span.pr-2.pb-5 Already own an account?
              a(href="/login").ml-2 Login
