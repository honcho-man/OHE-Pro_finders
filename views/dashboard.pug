extends layout

block content
	include dashboard-head
	include dashboard-menu 
	- var id = userId
	.app-container.container-fluid.p-0
		.app-content.container-fluid.m-0
			.row 
				.d-md-block.col-md-4.col-lg-3.p-0
				.col-12.col-md-8.col-lg-9.main-content.p-0
					button.processes.primary-btn.text-center.p-3.process-out
						i.lni.lni-spinner.fa-spin
					.alert-contn.justify-content-center.text-center.col-12.col-md-8.col-lg-9
						.col-12.col-md-6.alert.fade-out
					.main-dashboard
						.-dashboard
							.intros.pt-4.pl-4.pb-2
								h4 
									|Welcome 
									span.fullname #{firstname}
									span.hand-wave.pl-2 👋🏽
							.-dashboard-options.container-fluid.pl-2
								include dash-board
						.-chats.hide.position-relative
							include chat
						.-settings.hide 
							include setting
						.-help-center.border.hide
							h1 help center
	include dashboard-scripts
